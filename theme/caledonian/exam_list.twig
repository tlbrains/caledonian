    <p>Estos son los ex√°menes</p>

    {% for record in records %}
        <article>
            <h2><a href="{{ record.link }}">{{ record.title }} </a></h2>
        </article>

        <hr>

    {% else %}
    <article>
        <h2>No content found.</h2>
        <p>
